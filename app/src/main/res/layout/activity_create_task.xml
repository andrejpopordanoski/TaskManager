<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CreateTaskActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/colorPrimaryDark"
                android:elevation="10dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create new task"
                    android:textColor="#fff"
                    android:textSize="@dimen/large_txt_size"

                    ></TextView>


            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardElevation="3dp"
                app:strokeWidth="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">


                <LinearLayout
                    android:id="@+id/RequiredInfoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/appbar"
                    android:background="@color/backgrounds"
                    android:orientation="vertical"
                    android:paddingLeft="40dp"
                    android:paddingBottom="30dp"

                    >


                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal"

                        >

                        <RadioButton
                            android:id="@+id/developer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/colorPrimaryDark"
                            android:onClick="onRadioButtonClicked"
                            android:padding="5dp"
                            android:text="Developer"
                            android:textColor="@color/colorPrimaryDark" />

                        <RadioButton
                            android:id="@+id/tester"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/colorPrimaryDark"

                            android:onClick="onRadioButtonClicked"
                            android:padding="5dp"
                            android:text="Tester"
                            android:textColor="@color/colorPrimaryDark" />

                        <RadioButton
                            android:id="@+id/manager"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/colorPrimaryDark"

                            android:onClick="onRadioButtonClicked"
                            android:padding="5dp"
                            android:text="Project Manager"
                            android:textColor="@color/colorPrimaryDark" />
                    </RadioGroup>

                    <Spinner
                        android:id="@+id/asignee_spinner"

                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="5dp"
                        android:text="Choose role of the asignee:"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/small_txt_size"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/error_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:text="No tester has been assigned to this project"
                        android:textColor="#a23018"
                        android:textSize="15dp"
                        android:textStyle="bold" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"

                        android:gravity="center">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/meeting_item_meeting_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:completionThreshold="1"
                            android:hint="Task name"
                            android:inputType="text"
                            android:textColor="@color/colorPrimaryDark"
                            android:textColorHint="@color/thumbColor" />

                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/appbar"
            android:background="@color/common_google_signin_btn_text_dark_default">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/dueDateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="15dp">

                    <ImageView
                        android:id="@+id/dueDateIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center_vertical"
                        android:elevation="2dp"
                        android:src="@drawable/ic_calendar"
                        android:tint="@color/colorAccent"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:id="@+id/date_holder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:text="Select due date"
                            android:textColor="@color/colorPrimary"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/chosen_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:hint=""
                            android:textColor="@color/colorAccent"
                            android:textSize="15dp" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorAccent" />

                <LinearLayout
                    android:id="@+id/priorityLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="15dp">

                    <ImageView
                        android:id="@+id/priorityIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center_vertical"
                        android:elevation="2dp"
                        android:src="@drawable/ic_numbered_information"
                        android:tint="@color/colorAccent"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:id="@+id/priority_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"

                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:text="Select priority"
                            android:textColor="@color/colorPrimary"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/etPriority"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:hint=""
                            android:textColor="@color/colorAccent"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="45dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/colorAccent" />

                <LinearLayout
                    android:id="@+id/descriptionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="15dp">

                    <ImageView
                        android:id="@+id/descriptionIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center_vertical"
                        android:elevation="2dp"
                        android:tint="@color/colorAccent"
                        android:src="@drawable/ic_description"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:id="@+id/description_holder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:text="Description"
                            android:textColor="@color/colorPrimary"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/etDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:hint=""
                            android:textColor="@color/colorAccent"
                            android:textSize="20sp" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorAccent" />



            </LinearLayout>

        </ScrollView>
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:src="@drawable/ic_send_black_24dp"

        android:layout_gravity="bottom|right" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
