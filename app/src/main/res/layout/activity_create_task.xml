<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CreateTaskActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/colorPrimaryDark"
                android:elevation="10dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create new task"
                    android:textColor="#fff"
                    android:textSize="@dimen/large_txt_size"

                    ></TextView>


            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:elevation="3dp"
                android:background="#c0c0c0" />

            <LinearLayout
                android:id="@+id/RequiredInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/appbar"
                android:background="@color/cream"
                android:orientation="vertical"
                android:paddingBottom="30dp"
                android:paddingLeft="40dp"

                >

                <!--                <com.google.android.material.textfield.TextInputLayout-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content">-->

                <!--                    <com.google.android.material.textfield.TextInputEditText-->
                <!--                        android:id="@+id/asignee-mail"-->
                <!--                        android:layout_width="match_parent"-->
                <!--                        android:layout_height="wrap_content"-->
                <!--                        android:layout_marginEnd="45dp"-->
                <!--                        android:layout_marginLeft="45dp"-->
                <!--                        android:layout_marginRight="45dp"-->
                <!--                        android:layout_marginStart="45dp"-->
                <!--                        android:completionThreshold="1"-->
                <!--                        android:hint="Asignee"-->
                <!--                        android:inputType="text"-->
                <!--                        android:textColor="@color/colorPrimary"-->
                <!--                        android:textSize="20dp" />-->

                <!--                </com.google.android.material.textfield.TextInputLayout>-->



                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:textStyle="bold"
                    android:text="Choose role of the asignee:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/small_txt_size">

                </TextView>
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"

                    >

                    <RadioButton
                        android:id="@+id/developer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:onClick="onRadioButtonClicked"
                        android:padding="5dp"
                        android:text="Developer"
                        android:textColor="@color/colorPrimaryDark" />

                    <RadioButton
                        android:id="@+id/tester"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimaryDark"

                        android:onClick="onRadioButtonClicked"
                        android:padding="5dp"
                        android:text="Tester"
                        android:textColor="@color/colorPrimaryDark" />

                    <RadioButton
                        android:id="@+id/manager"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimaryDark"

                        android:onClick="onRadioButtonClicked"
                        android:padding="5dp"
                        android:text="Project Manager"
                        android:textColor="@color/colorPrimaryDark" />
                </RadioGroup>

                <Spinner
                    android:id="@+id/asignee_spinner"

                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    />

                <TextView
                    android:id="@+id/error_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:paddingLeft="15dp"
                    android:text="No tester has been assigned to this project"
                    android:textColor="#a23018"
                    android:textSize="15dp" />



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/meeting_item_meeting_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:completionThreshold="1"
                        android:hint="Task name"
                        android:inputType="text"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHint="@color/thumbColor"/>

                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/appbar"
            android:background="@color/backgrounds">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/dueDateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="15dp">

                    <ImageView
                        android:id="@+id/dueDateIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center_vertical"
                        android:elevation="4dp"
                        android:src="@drawable/baseline_star_black_24dp"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:id="@+id/date_holder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:text="Due date"
                            android:textColor="@color/colorPrimary"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/chosen_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:hint="Today"
                            android:textColor="@color/colorAccent"
                            android:textSize="15dp" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="5dp"
                    android:background="#c0c0c0" />

                <LinearLayout
                    android:id="@+id/priorityLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="15dp">

                    <ImageView
                        android:id="@+id/priorityIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center_vertical"
                        android:elevation="4dp"
                        android:src="@drawable/baseline_star_black_24dp"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:id="@+id/priority_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"

                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:text="Priority"
                            android:textColor="@color/colorPrimary"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/etPriority"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:hint="Medium"
                            android:textColor="@color/colorAccent"
                            android:textSize="15dp" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="5dp"
                    android:background="#c0c0c0" />

                <LinearLayout
                    android:id="@+id/descriptionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="15dp">

                    <ImageView
                        android:id="@+id/descriptionIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center_vertical"
                        android:elevation="4dp"
                        android:src="@drawable/baseline_star_black_24dp"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:id="@+id/description_holder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:text="Description"
                            android:textColor="@color/colorPrimary"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/etDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:hint="No description"
                            android:textColor="@color/colorAccent"
                            android:textSize="20dp" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="5dp"
                    android:background="#c0c0c0" />



            </LinearLayout>

        </ScrollView>
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:src="@drawable/ic_send_black_24dp"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom|right|end" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
