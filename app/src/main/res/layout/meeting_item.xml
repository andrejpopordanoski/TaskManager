<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/meeting_item_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="#e6e6e6"
    android:dividerPadding="0dp"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">


    <View
        android:id="@+id/meeting_item_view"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="#c0c0c0"
        android:divider="#e6e6e6"
        android:dividerHeight="0dp"
        android:dividerPadding="0dp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="5dp"
        card_view:cardUseCompatPadding="true"
        android:divider="#e6e6e6"
        android:dividerPadding="0dp"
        android:elevation="6dp"
        app:cardElevation="3dp"
        android:minHeight="80dp">

        <LinearLayout
            android:id="@+id/left_pad"
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:padding="0dp"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:divider="#e6e6e6"
            android:dividerPadding="0dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:divider="#e6e6e6"
                android:dividerHeight="0dp"
                android:dividerPadding="0dp"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/meeting_item_meeting_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="Meeting 1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/meeting_item_meeting_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:hint="Friday"
                    android:textColor="@color/colorAccent"
                    android:textSize="15dp" />

            </LinearLayout>


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>